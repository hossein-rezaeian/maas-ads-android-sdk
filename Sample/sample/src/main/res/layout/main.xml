<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/interstitialButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interstitial"
            android:onClick="fireInterstitial" />

        <Button
            android:id="@+id/videoInterstitialButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video"
            android:onClick="fireVideoInterstitial" />

        <Button
            android:id="@+id/bannerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/banner"
            android:onClick="fireBanner" />

        <Button
            android:id="@+id/navtiveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nativeAd"
            android:onClick="fireNativeAd" />
    </LinearLayout>

    <com.phunware.advertising.PwBannerAdView
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/bannerAdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Example with all PwBannerAdView attributes
    <com.phunware.advertising.PwBannerAdView
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/bannerAdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:zone="@string/banner_zone_id"
        app:auto_load="true"
        app:update_interval="30"
        app:test_mode="true"/>
    -->
</RelativeLayout>
